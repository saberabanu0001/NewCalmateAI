{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start CalmMateAI Flask App",
            "type": "shell",
            "command": "source venv/bin/activate && export FLASK_ENV=development && export PORT=5001 && python app.py",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "source venv/bin/activate && pip install -r requirements.txt",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        }
    ]
}